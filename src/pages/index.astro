---
import Layout from '@layouts/Layout.astro';
const title = 'Home';
---

<Layout>
	<style>
		* { box-sizing: border-box; }
		body, html {
			margin: 0; padding: 0; height: 100vh; /* 全屏高度 */
			display: flex;
			justify-content: center;
			align-items: center;
			background: #222;
		}
		.container {
			position: relative;
			width: 80vw;   
			height: 70vh; 
			overflow: hidden;
			user-select: none;
		}
		.img-before, .img-after {
			position: absolute;
			top: 0; bottom: 0;
			height: 100%;
			width: 100%;
			object-fit: cover;
		}
		.img-before {
			z-index: 1;
		}
		.img-after {
			z-index: 2;
			width: 50%; 
			overflow: hidden;
			clip-path: inset(0 50% 0 0); 
		}
		/* 这里用clip-path实现裁剪，js会动态修改clip-path的right百分比 */

		/* 滑块样式 */
		.slider {
			position: absolute;
			top: 0; bottom: 0;
			left: 50%; /* 初始50% */
			width: 3px;
			background: #fff;
			cursor: ew-resize;
			z-index: 3;
			transition: background 0.3s;
		}
		.slider:hover {
			background: #0af;
		}
		/* 滑块左右两边的小圆点，方便拖动 */
		.slider::before, .slider::after {
			content: '';
			position: absolute;
			top: 50%;
			transform: translateY(-50%);
			width: 15px;
			height: 15px;
			background: #fff;
			border-radius: 50%;
		}
		.slider::before {
			left: -6px;
		}
		.slider::after {
			right: -6px;
		}
	</style> 
